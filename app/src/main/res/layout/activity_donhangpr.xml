<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donhangpr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnDangDen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="Đang đến"
            android:textColor="#Ef0d0d"
            android:textSize="17dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btnLichSu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="Lịch sử"
            android:textColor="#000"
            android:textSize="17dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            android:background="@drawable/border_radius"
            >
            <ImageView
                android:padding="1dp"
                android:background="@drawable/radius_item"
                android:id="@+id/img"
                android:layout_margin="5dp"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:src="@drawable/food03"></ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PizzaHub"
                    android:textColor="#ef0d0d"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    android:layout_marginLeft="5dp"

                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thương hiệu Pizza chất lượng số 1 Việt Nam"
                    android:layout_marginLeft="5dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="299 Nguyễn Văn Trỗi, Nam Phước, Duy Xuyên, Quảng Nam"

                    android:layout_marginLeft="5dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100,000đ - Đã thanh toán"
                    android:textStyle="bold"
                    android:textColor="#ef0d0d"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    >
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/item1"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/radius_item"
            >
            <ImageView
                android:padding="1dp"
                android:layout_margin="5dp"
                android:id="@+id/img1"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:src="@drawable/food03"
                android:background="@drawable/radius_item"></ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hub"
                    android:textSize="18sp"
                    android:textColor="#ef0d0d"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thương hiệu Pizza chất lượng số 1 Việt Nam"
                    android:layout_marginLeft="5dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="299 Nguyễn Văn Trỗi, Nam Phước, Duy Xuyên, Quảng Nam"

                    android:layout_marginLeft="5dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100,000đ - Thanh toán khi nhận hàng"
                    android:textStyle="bold"
                    android:textColor="#ef0d0d"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    >
                </TextView>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/nhahang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/res"
                    android:text="Nhà hàng"
                    android:textColor="#000"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:drawableTop="@drawable/qq"
                    android:text="Đơn hàng"
                    android:textColor="#ef0d0d"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:id="@+id/thongbao1"
                    android:drawableTop="@drawable/noti"
                    android:text="Thông báo"
                    android:textColor="#000"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/taik"
                    android:background="#fff"
                    android:drawableTop="@drawable/us"
                    android:text="Tài Khoản"
                    android:textColor="#000"></Button>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>