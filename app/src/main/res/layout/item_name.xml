<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/imghinh"
        android:layout_width="120dp"
        android:layout_height="120dp"></ImageView>
    <TextView
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="COMBO PIZZAHUB A 145.000đ"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/textviewmon1"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/cc"
        android:text="1 Pizza thập cẩm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/textviewmon2"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/cc"
        android:text="1 Pizza thập cẩm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:id="@+id/btndh"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:text="đặt hàng"
        android:background="@drawable/botron"
        android:textColor="#fff"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#ef0d0d"
        android:textSize="20dp"
        android:textStyle="bold"></Button>

</LinearLayout>